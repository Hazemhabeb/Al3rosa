<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/landing_img_slide"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/proposal"
            android:layout_gravity="center"
            android:layout_marginTop="?actionBarSize"/>
        <TextView
            android:id="@+id/landing_txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Get Help Now"
            android:layout_below="@+id/pagerid"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/landing_txt_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:textAppearance="@style/changefont"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/intro_summery_1"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/landing_txt_title"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/facebook"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/signup_facebook_back"
            android:text="@string/sign_up_with_facebook"
            android:paddingRight="60dp"
            android:paddingLeft="30dp"
            android:onClick="login"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="15sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/google_plus"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/signup_google_back"
            android:text="@string/sign_up_with_google"
            android:paddingRight="60dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="15sp"/>


    </LinearLayout>


</FrameLayout>